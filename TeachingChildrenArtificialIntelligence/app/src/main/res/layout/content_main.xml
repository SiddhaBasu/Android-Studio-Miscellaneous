<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.siddha.teachingchildrenartificialintelligence.MainActivity"
    tools:showIn="@layout/activity_mainactivity"
    android:background="@drawable/ai5">

    <Button
        android:id="@+id/btnsignificant"
        android:layout_width="317dp"
        android:layout_height="79dp"
        android:background="@android:color/background_dark"
        android:elevation="2dp"
        android:text="Why Is It Significant?"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="194dp"
        tools:tooltipText="Why is Artificial Intelligence Significant?"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btnaiworks"
        android:layout_width="285dp"
        android:layout_height="90dp"
        android:background="@android:color/background_dark"
        android:text="How does Artificial Intelligence Work?"
        android:textColor="@android:color/background_light"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="317dp"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/btnsignificant"
        android:layout_centerHorizontal="true"
        tools:tooltipText="How Artificial Intelligence Works"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="296dp"
        android:layout_height="160dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="21dp"
        android:fontFamily="serif-monospace"
        android:text="Teaching the Art of Artificial Intelligence"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="44dp"
        tools:layout_editor_absoluteY="16dp" />
</RelativeLayout>
