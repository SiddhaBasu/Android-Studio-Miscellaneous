<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.siddha.thememeapp.MainActivity"
    android:background="@color/appMainScreenBackground">


    <Button
        android:id="@+id/ripbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="RIP"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="49dp"
        android:layout_below="@+id/aliaintrobtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/defaultyboibtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="Default Dance"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_below="@+id/soundboardtitle"
        android:layout_alignLeft="@+id/aliaintrobtn"
        android:layout_alignStart="@+id/aliaintrobtn"
        android:layout_marginTop="43dp" />

    <Button
        android:id="@+id/aliaintrobtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ripbtn"
        android:layout_alignStart="@+id/ripbtn"
        android:layout_centerVertical="true"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="Ali-A"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/defaultpeacebtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button"
        android:fontFamily="casual"
        android:padding="15dp"
        android:text="Peaceful Default"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_marginBottom="56dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/aliaintrobtn"
        android:layout_alignStart="@+id/aliaintrobtn" />

    <TextView
        android:id="@+id/soundboardtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_text_view"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="Meme Soundboard"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp" />


</RelativeLayout>
