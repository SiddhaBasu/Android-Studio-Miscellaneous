<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/appMainScreenBackground"
    tools:context="com.example.siddha.firstapplication.MainScreen">


    <Button
        android:id="@+id/singleplayerttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="94dp"
        android:layout_x="71dp"
        android:layout_y="165dp"
        android:background="@drawable/rounded_main_screen_button"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="Multiplayer"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/multiplayerttt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/singleplayerttt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:layout_x="57dp"
        android:layout_y="251dp"
        android:background="@drawable/rounded_main_screen_button"
        android:fontFamily="casual"
        android:padding="10dp"
        android:text="Singleplayer"
        android:textColor="@android:color/background_light"
        android:textSize="36sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="69dp"
        android:fontFamily="casual"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="64sp" />

</RelativeLayout>
